{
    "version": 6,
    "cmakeMinimumRequired": {
          "major": 3,
          "minor": 21,
          "patch": 0
      },
    "configurePresets": [
  
      {
          "name": "common-base",
          "hidden": true,
          "binaryDir": "${sourceDir}/build/${presetName}",
          "installDir": "${sourceDir}/install/${presetName}",
          "cacheVariables": {
              "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
          }
      },
      
      
      {
          "name": "linux-base",
          "hidden": true,
          "inherits": "common-base",
          "generator": "Ninja Multi-Config",
          "condition": {
            "type": "equals",
            "lhs": "${hostSystemName}",
            "rhs": "Linux"
          },
          "cacheVariables": {
            "CMAKE_C_COMPILER": "gcc",
            "CMAKE_CXX_COMPILER": "g++"
          },
          "vendor": {
            "microsoft.com/VisualStudioSettings/CMake/1.0": {
              "hostOS": [
                "Linux"
              ]
            },
            "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
              "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
            }
          }
        },
        {
          "name": "linux-x64-debug",
          "inherits": "linux-base",
          "displayName": "x64 Debug",
          "architecture": {
            "value": "x64",
            "strategy": "external"
          },
          "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Debug",
            "SANITIZE": false
          }
        },
        {
          "name": "linux-x64-release",
          "inherits": "linux-base",
          "displayName": "x64 Release",
          "architecture": {
            "value": "x64",
            "strategy": "external"
          },
          "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Release",
            "SANITIZE": false
          }
        },
  
        {
          "name": "windows-base",
          "hidden": true,
          "inherits": "common-base",
          "generator": "Visual Studio 17 2022",
          "condition": {
            "type": "equals",
            "lhs": "${hostSystemName}",
            "rhs": "Windows"
          },
          "cacheVariables": {
             "VCPKG_TARGET_TRIPLET" : "x64-windows"
          }
        },
        {
          "name": "windows-x64-debug",
          "inherits": "windows-base",
          "displayName": "x64 Debug",
          "architecture": {
            "value": "x64",
            "strategy": "external"
          },
          "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Debug",
            "SANITIZE": false
          }
        },
        {
          "name": "windows-x64-release",
          "inherits": "windows-base",
          "displayName": "x64 Release",
          "architecture": {
            "value": "x64",
            "strategy": "external"
          },
          "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Release",
            "SANITIZE": false
          }
        },
  
  
        {
          "name": "macos-base",
          "hidden": true,
          "inherits": "common-base",
          "generator": "Ninja Multi-Config",
          "condition": {
            "type": "equals",
            "lhs": "${hostSystemName}",
            "rhs": "Darwin"
          },
          "cacheVariables": {
            "CMAKE_C_COMPILER": "gcc",
            "CMAKE_CXX_COMPILER": "g++"
          },
          "vendor": {
            "microsoft.com/VisualStudioSettings/CMake/1.0": {
              "hostOS": [
                "macOS"
              ]
            },
            "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
              "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
            }
          }
        },
        {
          "name": "macos-x64-debug",
          "inherits": "macos-base",
          "displayName": "x64 Debug",
          "architecture": {
            "value": "x64",
            "strategy": "external"
          },
          "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Debug",
            "SANITIZE": false
          }
        },
        {
          "name": "macos-x64-release",
          "inherits": "macos-base",
          "displayName": "x64 Release",
          "architecture": {
            "value": "x64",
            "strategy": "external"
          },
          "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Release",
            "SANITIZE": false
          }
        }
  
     
    ],
  
